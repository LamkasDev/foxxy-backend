{
    "name": "foxxy-backend",
    "version": "0.0.0",
    "description": "A customizable and modular web back-end.",
    "license": "GPL-3.0-or-later",
    "author": {
        "name": "LamkasDev",
        "url": "https://lamkas.dev"
    },
    "scripts": {
        "dev": "tsc && node build/index.js --dev",
        "build": "tsc",
        "serve": "node build/index.js",
        "lint": "eslint 'src/**/*.{ts,tsx}'",
        "linty": "eslint 'src/**/*.{ts,tsx}' --fix",
        "pretty": "prettier --write 'src/**/*.{ts,tsx}'",
        "typecheck": "tsc --noEmit",
        "finstall:api": "yarn add fastify fastify-cors bcrypt && yarn add -D @types/bcrypt",
        "funinstall:api": "yarn remove fastify fastify-cors @types/bcrypt",
        "finstall:static": "yarn add fastify fastify-cors fastify-static",
        "funinstall:static": "yarn remove fastify fastify-cors fastify-static",
        "finstall:mysql": "yarn add mysql2",
        "funinstall:mysql": "yarn remove mysql2",
        "finstall:redis": "yarn add redis && yarn add -D @types/redis",
        "funinstall:redis": "yarn remove redis @types/redis"
    },
    "devDependencies": {
        "@commitlint/cli": "^14.1.0",
        "@commitlint/config-conventional": "^14.1.0",
        "@types/bcrypt": "^5.0.0",
        "@types/node": "^16.11.7",
        "@types/redis": "^2.8.32",
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.2",
        "prettier": "2.4.1",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "fastify": "^3.23.1",
        "fastify-cors": "^6.0.2",
        "fastify-static": "^4.5.0",
        "mysql2": "^2.3.3-rc.0",
        "nanocolors": "^0.2.12",
        "redis": "^3.1.2"
    }
}
